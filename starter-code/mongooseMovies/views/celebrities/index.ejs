<h2>All Celebrities</h2>

<ul>
  <% celebrities.forEach((celebrity) => {%>
    <li>
      <b>Name: </b>
      <a href="/celebrities/<%= celebrity._id %>">
        <%= celebrity.name %>
      </a>
      <b>Occupation: </b><%= celebrity.occupation %>
      <b>Catchphrase: </b>"<%= celebrity.catchPhrase %>"
      <form action="celebrities/<%= celebrity._id %>/delete" method="POST">
        <button type="submit">Delete Celebrity</button>
      </form>
      <form action="celebrities/<%= celebrity._id %>/edit">
        <button type="submit">Edit Celebrity</button>
      </form>
    </li>
  <% }) %>
</ul>
